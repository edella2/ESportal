<div class="row pad-bot-lg">
  <div class="col-md-6 col-lg-6 col-xs-12 hidden-xs col-sm-6">
    <div class="input-group" style="padding-top:2px">
      <%= form_tag(tournaments_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "form-control btn-border", placeholder: "Search Items" %>
      <span class="input-group-btn "><button class="btn btn-warning btn-border" type="submit">&nbsp;search&nbsp;</button></span>
      <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6 col-lg-6 col-sm-6">
    <!-- Dropdown button -->
    <div class="btn pull-right">

      <select name="game_id" id="game_id">
        <% @games.each do |game| %>
        <option><%= link_to game_path(game) %></option>
        <% end %>
      </select>


    </div>
    <!-- Dropdown button end -->
    <div class="btn-group btn pull-right" role="group" aria-label="...">
    <%= link_to "Year", tournaments_path(sort_option: "year"), class: "btn btn-border btn-warning" %>
    <%= link_to "Month", tournaments_path(sort_option: "month"), class: "btn btn-border btn-warning" %>
    <%= link_to "Week", tournaments_path(sort_option: "week"), class: "btn btn-border btn-warning" %>
    <%= link_to "Day", tournaments_path(sort_option: "day"), class: "btn btn-border btn-warning" %>
    </div>
  </div>
</div>

<div class="row">
  <% @tournaments_live.each do |tournament| %>
  <div class="col-md-12 col-sm-12 col-xs-12 portfolio-item">
  <% if tournament.image_default %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail">
      <img class="hidden-xs grayscale" id="<%= tournament.id %>" src="<%= tournament.image_large %>">
      <img class="hidden-lg hidden-sm hidden-md grayscale" id="<%= tournament.id %>" style="width:100%" src="<%= tournament.image_default %>">
    </a>
  <% else %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail">
      <img class="grayscale" style="max-height:200px; width:100%" id="<%= tournament.id%>" src="http://www.download-free-wallpaper.com/img50/svwyzdhmpisjaqkbykpz.png">
    </a>
  <% end %>
    <div class="info" id="<%= tournament.id %>">
     <div id="<%= tournament.id %>">
      <span class="h4">
        <span class="label label-primary">Live</span> <%= tournament.title%></span><br>
        <span id="<%= tournament.id %>-default-index-text" class="" >
          <p class="pad-top-xs"><b><%= tournament.city %></b> – <%= tournament.start %></p>
        </span>
        <span id="<%= tournament.id %>-hover-index-text" style="display:none" >
          <p class="pad-top-xs"><%= raw(tournament.description[0..180] + "...") %></p>
        </span>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="row">

  <% @tournaments_not_live.each do |tournament| %>
  <div class="col-md-4 col-sm-6 col-lg-3 col-xs-12 portfolio-item">
  <% if tournament.image_default %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail">
      <img class="grayscale" id="<%= tournament.id%>" src="<%= tournament.image_default %>">
    </a>
  <% else %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail">
      <img class="grayscale" style="max-height:200px; width:100%" id="<%= tournament.id%>" src="http://www.download-free-wallpaper.com/img50/svwyzdhmpisjaqkbykpz.png">
    </a>
  <% end %>

    <div class="info" id="<%= tournament.id %>">
      <div id="<%= tournament.id %>">
       <span class="h4"><%= tournament.short_title%></span><br>
        <span id="<%= tournament.id %>-default-index-text" class="" >
         <b><%= tournament.city %></b> – <%= tournament.start %>
        </span>
        <span id="<%= tournament.id %>-hover-index-text" style="display:none" >
         <p><%= raw(tournament.description[0..40]) %></p>
        </span>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<script>
$('img').hover(function(){
    var imageId = $(this).attr("id")
    $("#"+imageId+"-default-index-text").stop().fadeOut(200, function(){
      $("#"+imageId+"-hover-index-text").stop().fadeIn(400);
    });
},function(){
    var imageId = $(this).attr("id")
    $("#"+imageId+"-hover-index-text").stop().fadeOut(400, function() {
      $("#"+imageId+"-default-index-text").stop().fadeIn(600);
    });
});
</script>












