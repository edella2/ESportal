<div class="row" style="padding-bottom:15px">

  <div class="col-md-3">
    <h3>Tournaments</h3>
  </div>

  <div class="col-md-9">
    <div class="btn pull-right">
     <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"> Game <span class="caret"></span></button>
    </div>

    <div class="btn-group btn pull-right" role="group" aria-label="...">
    <%= link_to "Year", tournaments_path(sort_option: "year"), class: "btn btn-default" %>
    <%= link_to "Month", tournaments_path(sort_option: "month"), class: "btn btn-default" %>
    <%= link_to "Week", tournaments_path(sort_option: "week"), class: "btn btn-default" %>
    <%= link_to "Day", tournaments_path(sort_option: "day"), class: "btn btn-default" %>
    </div>

    <div class="input-group pull-right">
      <%= form_tag(tournaments_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "form-control span2", placeholder: "Search Items" %>
      <span class="input-group-btn"><button class="btn btn-default" type="submit">Go!</button></span>
      <% end %>
      </div>
    </div>

  </div>

</div>


<div class="row">

  <% @tournaments.each do |tournament| %>

  <% if tournament.is_live? %>
  <div class="col-md-12 col-sm-12 col-xs-12 portfolio-item">
  <% else %>
  <div class="col-md-4 col-sm-6 col-lg-3 col-xs-12 portfolio-item">
  <% end %>

  <% if tournament.image && tournament.is_live? %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail" style=><img  src="<%= tournament.large %>"></a>
  <% elsif tournament.image %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail"><img src="<%= tournament.image %>"></a>
  <% else %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail"><img src="http://sisj.in/wp-content/uploads/2015/11/480px-Placeholder-480x270.png"></a>
  <% end %>

  <div class="info">
    <% if tournament.is_live? %>
    <h3><span class="label label-success">Live</span>&nbsp;<%= tournament.name%></h3>
    <% else %>
    <h4><%= tournament.name%></h4>
    <% end %>
      <p><%= tournament.city %> – <%= tournament.start_date %> – <%= tournament.end_date %></p>
      </p>
    </div>
  </div>
  <% end %>
</div>


