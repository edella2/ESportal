<h1>Tournaments</h1><br>

<div class="row">
  <div class="col-md-12">

    <div class="btn pull-right">
       <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"> Game <span class="caret"></span>
    </button>
    </div>
    <div class="btn-group btn pull-right" role="group" aria-label="...">
    <button type="button" class="btn btn-default">Year</button>
    <button type="button" class="btn btn-default">Month</button>
    <button type="button" class="btn btn-default">Week</button>
    <button type="button" class="btn btn-default">Day</button>
    </div>
  </div>
</div>
<br>


<div class="row">
  <% @tournaments.each do |tournament| %>
  <% if tournament.start_date == DateTime.now.to_date || tournament.end_date = (DateTime.now).to_date %>
  <div class="col-md-3 col-sm-6 col-xs-12 portfolio-item">
  <% else %>
  <div class="col-md-3 col-sm-6 col-xs-12 portfolio-item">
  <% end %>
  <% if tournament.image %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail"><img src="<%= tournament.image %>"></a>
  <% else %>
    <a href="/tournaments/<%=tournament.id%>" class="thumbnail"><img src="http://sisj.in/wp-content/uploads/2015/11/480px-Placeholder-480x270.png"></a>
  <% end %>
    <div class="info">
    <h4>
      <a href="#"><%= tournament.name%></a>
    </h4>
    <p><%= tournament.start_date %> â€“ <%= tournament.end_date %></p>
  </div>
  </div>
  <% end %>
</div>

<br><hr><br>

<%= month_calendar events: @tournaments do |date, tournaments| %>
<%= date %>

<% tournaments.each do |tournament| %>
<div>
  <%= tournament.name %>
</div>
<% end %>
<% end %>
